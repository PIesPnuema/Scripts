#!/bin/bash

# Define the directories to search for commands
directories=("/bin" "/usr/bin" "/usr/local/bin")

# Loop through each directory
for dir in "${directories[@]}"; do
    # Check if the directory exists
    if [ -d "$dir" ]; then
        # List the contents of the directory and extract only the filenames
        command_names=$(ls "$dir" | grep -v "/")
        
        # Print the directory name
        echo "Commands in $dir:"
        
        # Loop through each command name and print it
        for cmd_name in $command_names; do
            echo "  $cmd_name"
        done
        
        echo
    fi
done

